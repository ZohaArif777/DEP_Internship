<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spalsh_screen"
    tools:context=".splashActivity">
    <ImageView
        android:id="@+id/imgview"
        android:layout_width="211dp"
        android:layout_height="140dp"
        android:layout_marginTop="268dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/white_cloud"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predicting perfection,\n one forecast at time"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/imgview"
        app:layout_constraintStart_toStartOf="@+id/imgview"
        app:layout_constraintTop_toBottomOf="@+id/imgview"
        android:layout_marginTop="68dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="@font/merriweathersans_bold"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>